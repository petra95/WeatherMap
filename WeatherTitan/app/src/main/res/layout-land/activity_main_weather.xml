<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/weather">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cityTextView"
            style="@style/mainTextViewTheme"
            android:textSize="@dimen/text_view_size"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="25dp"
            android:text="Budapest"/>

            <ImageView
                android:id="@+id/weatherImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/degreeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/temp_text_view_size"
                android:text="25°C"/>
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/descr_text_view_size"
                android:text="windy"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/min"/>
                    <TextView
                        android:id="@+id/minDegTextView"
                        style="@style/dataTextViewTheme"
                        android:text="12°C"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/max"/>
                    <TextView
                        android:id="@+id/maxDegTextView"
                        style="@style/dataTextViewTheme" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/wind"/>
                    <TextView
                        android:id="@+id/windTextView"
                        style="@style/dataTextViewTheme" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/rain"/>
                    <TextView
                        android:id="@+id/rainTextView"
                        style="@style/dataTextViewTheme" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/hum"/>
                    <TextView
                        android:id="@+id/humidityTextView"
                        style="@style/dataTextViewTheme" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
