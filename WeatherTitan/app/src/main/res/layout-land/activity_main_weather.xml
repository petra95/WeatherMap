<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/backGroundColor">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cityTextView"
            style="@style/mainTextViewTheme"
            android:textSize="@dimen/text_view_size"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="25dp"
            android:text="Budapest"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">
            <ImageView
                android:id="@+id/weatherImageView"
                android:adjustViewBounds="true"
                android:maxWidth="@dimen/activity_horizontal_margin"
                android:maxHeight="@dimen/activity_horizontal_margin"
                android:background="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/degreeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/temp_text_view_size"
                android:text="25Â°"/>
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/descr_text_view_size"
                android:text="windy"/>
        </TableRow>

        <ScrollView>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/min"/>
                    <TextView
                        android:id="@+id/minDegTextView"
                        style="@style/dataTextViewTheme"
                        android:text="tudzts"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/max"/>
                    <TextView
                        android:id="@+id/maxDegTextView"
                        style="@style/dataTextViewTheme"
                        android:text="tudzts"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/wind"/>
                    <TextView
                        android:id="@+id/windTextView"
                        style="@style/dataTextViewTheme"
                        android:text="tudzts"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/rain"/>
                    <TextView
                        android:id="@+id/rainTextView"
                        style="@style/dataTextViewTheme"
                        android:text="tudzts"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/fixedTextViewTheme"
                        android:text="@string/hum"/>
                    <TextView
                        android:id="@+id/humidityTextView"
                        style="@style/dataTextViewTheme"
                        android:text="tudzts" />
                </TableRow>
            </TableLayout>
        </ScrollView>
</TableLayout>
</LinearLayout>